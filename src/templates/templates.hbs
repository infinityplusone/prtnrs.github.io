<div>

<script type="text/x-handlebars-template" data-template-id="our-work">
  <div class="work-carousel">
    <div class="work-slides">
      {{#each projects}}
        {{>work-slide}}
      {{/each}}
    </div>
    <div class="work-carousel--buttons">
      {{#each projects}}
        <a href="#slide-{{hyphenize project}}" class="carousel-button{{#if @fisrst}} active{{/if}}" data-toggle="slide" data-index="{{@index}}"></a>
      {{/each}}
    </div>
  </div>
</script>

<script type="text/x-handlebars-template" data-partial-id="work-slide">
  <a href="#modal-{{hyphenize project}}" class="work-slide" data-partner="{{partner}}" data-project="{{project}}" id="slide-{{hyphenize project}}" data-toggle="modal">
    <div class="work-slide--image"></div>
    <div class="work-slide--partner">{{{partner}}}</div>
    <div class="work-slide--project">{{{project}}}</div>
    <div class="work-slide--blurb">{{{blurb}}}</div>
  </a>
</script>

<script type="text/x-handlebars-template" data-template-id="work-modal">
  <div class="modal fade" id="modal-{{hyphenize project}}">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="work--partner">{{{partner}}}</h3>
        <h2 class="work--project">{{{project}}}</h2>
        <div class="work--tags">
        {{#each tags}}
          <span class="work-tag" data-toggle="tag">{{this}}</span>
        {{/each}}
        </div>
        <a href="#" class="modal-close" data-close="modal">&times;</a>
      </div>
      <div class="modal-body">
        <div class="work-detail">
          <div class="work--blurb">
            <p>{{{blurb}}}</p>
          </div>
          <div class="work--challenge">
            {{#each (reformat challenge)}}
              {{>list}}
            {{/each}}
          </div>
          <div class="work--solution">
            {{#each (reformat solution)}}
              {{>list}}
            {{/each}}
          </div>
          <div class="work--outcome">
            {{#each (reformat outcome)}}
              {{>list}}
            {{/each}}
          </div>
          <div class="work--tools">
            {{#each (reformat tools)}}
              {{>list}}
            {{/each}}
          </div>
          {{!-- <div class="work--tags">{{{tags}}}</div> --}}
          {{!-- <div class="work--metadata">{{{metadata}}}</div> --}}
          {{!-- <div class="work--lead">{{{lead}}}</div> --}}
          {{!-- <div class="work--testimonial">{{{testimonial}}}</div> --}}
        </div>
      </div>
    </div>
  </div>
</script>


<script type="text/x-handlebars-template" data-partial-id="list">
  {{#if openList}}<ul>{{/if}}
  <{{tag}}>{{{text}}}</{{tag}}>
  {{#if closeList}}</ul>{{/if}}
</script>
</div>