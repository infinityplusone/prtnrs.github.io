<div class="work-slide" data-partner="{{partner}}" data-project="{{project}}" id="slide-{{hyphenize project}}" data-index="{{@index}}">
  <img src="./images/work/work-{{id}}.jpg" alt="{{project}}" class="work-slide--image" />
  <a href="#modal-{{hyphenize project}}" class="work-slide-overlay" data-partner="{{partner}}" data-project="{{project}}" data-toggle="modal" title="{{project}} with {{partner}}" tabindex="0">
    <div class="button button-primary button-black">
      Project Details
    </div>
  </a>
  <div class="work-slide-cover">
    <div class="work-slide--partner">{{{partner}}}</div>
    <div class="work-slide--project">{{{project}}}</div>
  </div>
</div>